<%- include('header-subroute') %>
<style>
    .form-container {
        width: 100%; /* Adjust the width as needed */
        max-width: 895px; /* Set a max-width for larger screens */
        padding: 80px;
        margin: 0 auto; /* Center horizontally */
        position: relative; /* Ensure the container is positioned relative to its normal position */
        top: 50%; /* Move down by half the height of the viewport */
        transform: translateY(15%); /* Shift upward by half its own height to center vertically */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Optional: adds a subtle shadow */
        border-radius: 8px; /* Optional: rounds the corners */
    }

    .form-group {
        margin-bottom: 20px; /* Adds spacing between form fields */
        width: 100%; /* Ensures form fields take up the full width of the .form-container */
    }

    input[type="text"],
    input[type="email"],
    input[type="text"] {
        width: calc(100% - 20px); /* Adjusts the width to account for padding */
        padding: 10px;
        margin: 4px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px; /* Optional: rounds the corners */
    }

    .submit-btn {
        background-color: #4CAF50; /* Green background */
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px; /* Optional: rounds the corners */
        cursor: pointer;
        width: 100%;
    }

    .submit-btn:hover {
        background-color: #45a049; /* Darker shade of green */
    }
</style>

    <div class="form-container">
        <h2>Guest Checkout for <%= courseName %></h2>
        <form action="/guest-checkout/<%= courseID %>" method="POST" class="row row--15" id="formforteacher">
            <div id="billing-form">
              
        
                <div class="row">
                    <!-- Full name field -->
                    <div class="col-md-6 col-12 mb--20">
                        <label for="name">Full Name</label>
                        <input type="text" id="name" name="name" placeholder="Full Name" required>
                    </div>
        
                    <!-- Email field -->
                    <div class="col-md-6 col-12 mb--20">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="Email" required>
                    </div>
        
                    <!-- Phone number field -->
                    <div class="col-md-6 col-12 mb--20">
                        <label for="phone">Phone Number</label>
                        <input type="text" id="phone" name="phone" placeholder="Phone Number" required>
                    </div>
                </div>
                <button type="submit" class="submit-btn">Proceed to Payment</button>
            </div>
        </form>
        
    </div>
    <br>
    <br>
    <br>
    <%- include('footer-subroute') %>
