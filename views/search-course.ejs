    <% if (isUserLoggedIn) { %>
        <!-- Include authenticated user header -->
        <%- include('auth_header') %>
    <% } else { %>
        <!-- Include regular header -->
        <%- include('header') %>
    <% } %>
    <style>
        .container {
            width: 100%; /* Full width */
            max-width: 1200px; /* Maximum width of the container */
            margin: auto; /* Centering the container */
            padding: 20px;
        }
    
        .course-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* Three cards per row */
            grid-gap: 20px; /* Space between cards */
        }
    
        .maso-item {
            background: #f9f9f9; /* Light background for each card */
            border: 1px solid #ddd; /* Subtle border */
            box-shadow: 0 2px 5px rgba(0,0,0,0.1); /* Soft shadow for depth */
            border-radius: 8px; /* Rounded corners */
        }
    
        .rbt-card {
            display: flex;
            flex-direction: column;
            height: 100%; /* Full height to match other cards */
        }
    
        .rbt-card-img img {
            width: 100%; /* Full width */
            height: 200px; /* Fixed height for consistency */
            object-fit: cover; /* Cover fit for no image distortion */
        }
    
        .rbt-card-body {
            padding: 10px; /* Padding inside the card */
        }
    
        .rbt-card-title {
            font-size: 16px; /* Standard font size for titles */
            margin-bottom: 5px; /* Space below the title */
        }
    
        .rbt-meta, .rbt-card-text {
            font-size: 14px; /* Smaller font size for meta and text */
        }
    
    </style>
    
    <div class="container">
        <h1>Search Results</h1>
        <div class="course-grid">
            <% if (courses.length > 0) { %>
                <% courses.forEach(function(course) { %>
                    <div class="maso-item <%= course.category %>">
                        <div class="rbt-card">
                            <div class="rbt-card-img">
                                <a href="<%= course.courseDetailLink %>">
                                    <img src="<%= course.imagePath %>" alt="<%= course.name %>">
                                </a>
                            </div>
                            <div class="rbt-card-body">
                                <h4 class="rbt-card-title"><a href="<%= course.courseDetailLink %>"><%= course.name %></a></h4>
                                <ul class="rbt-meta">
                                    <!-- <li><i class="feather-users"></i> Batch Starts</li>
                                    <li><i class="feather-book"></i> <span class="start-date">Loading date...</span></li> -->
                                    <li><i class="feather-clock"></i> <%= course.duration %></li>
                                </ul>
                                <p class="rbt-card-text">Support and provide counseling to all diabetic patients & their families</p>
                                <a class="rbt-btn-link" href="<%= course.courseDetailLink %>">Learn More<i class="feather-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No courses found.</p>
            <% } %>
        </div>
    </div>
    
    <%- include('footer');-%>

