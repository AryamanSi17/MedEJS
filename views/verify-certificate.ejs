                        </div>
                    </div>
                    <script>
                        document.getElementById('contact-form').addEventListener('submit', function (e) {
                            e.preventDefault(); // Prevent the form from submitting

                            // Display the modal
                            document.getElementById('modal').style.display = 'block';

                            // Hide the spinner and show the message after 2 seconds
                            setTimeout(function () {
                                document.querySelector('#modal .spinner-border').style.display = 'none';
                            }, 2000);
                        });
                        document.getElementById('modal').addEventListener('click', function () {
                            this.style.display = 'none';
                            document.querySelector('#modal .spinner-border').style.display = 'block'; // Reset the spinner for next time
                        });

                    </script>
