<% if (isUserLoggedIn) { %>
    <!-- Include auth_header -->
    <%- include('auth_header') %>
        <% } else { %>
            <!-- Include regular header -->
            <%- include('header') %>
                <% } %>
                    <div id="modal"
                        style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.7); z-index: 1000;">
                        <div
                            style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background-color: #fff; padding: 20px; border-radius: 5px;">
                            <div class="spinner-border text-primary" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                            <p>Data not available</p>
                        </div>
                    </div>


                    <br><br>
                    <!-- Start Banner Area -->
                    <div class="rbt-banner-area rbt-banner-3 header-transperent-spacer">
                        <div class="wrapper">
                            <div class="container">
                                <div class="row g-5">
                                    <div class="col-lg-7 order-2 order-lg-1">
                                        <div class="banner-content ">
                                            <div class="inner">
                                                <h1 class="title">Verify Certificate</h1>
                                                <p class="description">We understand the importance of ensuring the
                                                    authenticity and credibility of our certificates. With our
                                                    user-friendly validation system, you can easily verify the validity
                                                    of a certificate by entering the GMA registration number and last
                                                    name associated with it. Please note these certificates are not
                                                    educational certificates and should not be used as educational
                                                    qualifications. These certificates show your passion of learning and
                                                    ambition to treat patients</p>
                                                <p class="description">By providing this convenient and secure method,
                                                    we aim to give our users peace of mind and confidence in the
                                                    certificates they hold or are presented with. Whether you are an
                                                    employer, or an individual seeking to validate a certificate, our
                                                    system will swiftly provide you with the necessary information.</p>

                                            </div>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="col-lg-5 order-1 order-lg-2">
                                        <div class="rbt-contact-form contact-form-style-1">
                                            <h3 class="title" style="padding-top: 25px;">Enter details</h3>
                                            <form id="contact-form">
                                                <div class="form-group">
                                                    <input name="con_email" type="email">
                                                    <label>Email</label>
                                                    <span class="focus-border"></span>
                                                </div>
                                                <div class="form-group">
                                                    <input name="enrollment_number" type="number" maxlength="10">
                                                    <label>GMA Enrollment No.</label>
                                                    <span class="focus-border"></span>
                                                </div>
                                                <div class="form-submit-group">
                                                    <button type="submit"
                                                        class="rbt-btn btn-md btn-gradient hover-icon-reverse radius-round w-100">
                                                        <span class="icon-reverse-wrapper">
                                                            <span class="btn-text">Validate</span>
                                                            <span class="btn-icon"><i
                                                                    class="feather-arrow-right"></i></span>
                                                            <span class="btn-icon"><i
                                                                    class="feather-arrow-right"></i></span>
                                                        </span>
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="shape-wrapper">
                            <div class="left-shape">
                                <img src="assets/images/banner/right-shape.png" alt="Banner Images">
                            </div>
                            <div class="top-shape">
                                <img src="assets/images/banner/top-shape.png" alt="Banner Images">
                            </div>
                        </div>
                    </div>
                    <!-- End Banner Area -->
                    <div class="container-fluid">
                        <div class="row g-3">
                            <div class="col-lg-2 col-md-4 col-sm-6 col-6">
                                <div class="instagram-grid">
                                    <a>
                                        <img src="/assets/images/instagram/instagram-01.jpg" alt="instagram">
                                        <span class="user-info">
                                            <span class="icon"><i class="icon-instagram"></i></span>

                                        </span>
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-4 col-sm-6 col-6">
                                <div class="instagram-grid">
                                    <a>
                                        <img src="/assets/images/instagram/instagram-02.jpg" alt="instagram">
                                        <span class="user-info">
                                            <span class="icon"><i class="icon-instagram"></i></span>

                                        </span>
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-4 col-sm-6 col-6">
                                <div class="instagram-grid">
                                    <a>
                                        <img src="/assets/images/instagram/instagram-03.jpg" alt="instagram">
                                        <span class="user-info">
                                            <span class="icon"><i class="icon-instagram"></i></span>

                                        </span>
                                    </a>
