                                e.preventDefault(); // Stop the form from submitting normally
                        
                                var formData = new FormData(this);
                        
                                fetch('/user-interest-form', {
                                    method: 'POST',
                                    body: formData
                                })
                                .then(response => response.json())
                                .then(data => {
                                    // Log the success message, but you could also use alert(data.message) if you need to show a message
                                    console.log(data.message); // Or use alert(data.message) if you prefer a popup message
                                    // Reload the page after a short delay to show changes or reset form state
                                    setTimeout(() => window.location.reload(), 2000);
                                })
                                .catch(error => {
                                    console.error('Error:', error);
                                    // Optionally, display an error message or simply reload the page
                                    setTimeout(() => window.location.reload(), 2000);
                                });
                            });
                        });
                        </script>
                        
                        
                        
                        