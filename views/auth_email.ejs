<script>
  function sendOTP() {
    const email = document.querySelector('input[name="email"]').value;

    // Send AJAX request to send OTP
    fetch('/sendOtp', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ email })
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        // Show success message and hide email input
        document.getElementById('successMessage').style.display = 'block';
        document.getElementById('email').textContent = email;
        document.querySelector('input[name="email"]').disabled = true;
        document.querySelector('button[onclick="sendOTP()"]').style.display = 'none';
        document.querySelector('button[onclick="verifyOTP()"]').style.display = 'block';
      } else {
        // Show error message
        document.getElementById('errorMessage').style.display = 'block';
      }
    })
    .catch(error => {
      console.log('An error occurred:', error);
      // Show error message
      document.getElementById('errorMessage').style.display = 'block';
    });
  }

  function verifyOTP() {
    const email = document.querySelector('input[name="email"]').value;
    const otp = document.querySelector('input[name="otp"]').value;

    // Send AJAX request to verify OTP
    fetch('/verifyOtp', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ email, otp })
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        // Redirect to the login page
        window.location.href = '/login'; // Replace '/login' with the appropriate route
      } else {
        // Show error message
        document.getElementById('errorMessage').style.display = 'block';
      }
    })
    .catch(error => {
      console.log('An error occurred:', error);
      // Show error message
      document.getElementById('errorMessage').style.display = 'block';
    });
  }
</script>
