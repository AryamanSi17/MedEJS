<% if (isUserLoggedIn) { %>
    <%- include('auth_header') %>
<% } else { %>
    <%- include('header') %>
<% } %>

<div class="slider-area rbt-banner-10 height-750 bg_image bg_image--10">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <br>
                <br>
                <h1 class="text-center">Before proceeding...</h1>
                <p class="text-center mb-4">Please upload the necessary documents to continue.</p>
                <div class="rbt-contact-form contact-form-style-1 max-width-auto">
                    <form action="/upload-documents" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="courseID" value="<%= courseID %>">

                        <div class="row">
                            <% ['aadharCard', 'panCard', 'medicalCertificate', 'passportPhoto', 'mciCertificate', 'degree'].forEach(function(doc, index) { %>
                                <div class="col-md-6 mb-3">
                                    <label for="<%= doc %>" class="form-label d-block" style="font-size: 1.2em;">
                                        <%= doc.replace(/([A-Z])/g, ' $1').trim().replace(/\b\w/g, l => l.toUpperCase()) %> 
                                        <span class="upload-icon-label">
                                            <i class="fas fa-upload"></i>
                                        </span>
                                    </label>
                                    <input type="file" name="<%= doc %>" accept="image/*" required id="<%= doc %>" class="form-control" />
                                </div>
                                <% if (index % 2 !== 0) { %>
                                    <div class="w-100"></div>
                                <% } %>
                            <% }); %>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="mciNumber" class="form-label" style="font-size: 1.2em;">MCI Number</label>
                                <input type="text" name="mciNumber" required class="form-control" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="idNumber" class="form-label" style="font-size: 1.2em;">ID Number</label>
                                <input type="text" name="idNumber" required class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="address" class="form-label" style="font-size: 1.2em;">Address</label>
                            <textarea name="address" required class="form-control"></textarea>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="rbt-btn btn-md btn-gradient hover-icon-reverse w-100">Submit Documents</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
